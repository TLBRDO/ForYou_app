<div class="bg-white">
  <div class="container p-4 bg-white">
  <h1 class="mb-4 text-center">Trouvez l'offre qui vous correspond</h1>
    <%# SEARCH BAR %>
    <%= form_with url: offers_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "i.e: Babysitting"
      %>
      <%= submit_tag "Recherchez", class: "violet-button" %>
    <% end %>
    <%# FIN SEARCH BAR %>
    <%# ICONS RECHERCHE %>

    <div class="icon-bar">
      <%= form_tag offers_path, method: :get do %>
        <%= button_tag type: "submit", class: "btn btn-default", name: "jardin_exterieur" do %>
          <i class="fa-solid fa-seedling"></i>
          <p>Jardin/Extérieur</p>
        <% end %>
      <% end %>

      <%= form_tag offers_path, method: :get do %>
        <%= button_tag type: "submit", class: "btn btn-default", name: "babysitting" do %>
          <i class="fa-solid fa-baby-carriage"></i>
          <p>Baby-sitting/Garde d'enfants</p>
        <% end %>
      <% end %>

      <%= form_tag offers_path, method: :get do %>
        <%= button_tag type: "submit", class: "btn btn-default", name: "dogsitting" do %>
          <i class="fa-solid fa-dog"></i>
          <p>Dog-sitting/Garde d'animaux</p>
        <% end %>
      <% end %>

      <%= form_tag offers_path, method: :get do %>
        <%= button_tag type: "submit", class: "btn btn-default", name: "reparation" do %>
          <i class="fa-solid fa-screwdriver-wrench"></i>
          <p>Réparation/Entretien</p>
        <% end %>
      <% end %>

      <%= form_tag offers_path, method: :get do %>
        <%= button_tag type: "submit", class: "btn btn-default", name: "house" do %>
          <i class="fa-solid fa-house"></i>
          <p>Maison/Décoration</p>
        <% end %>
      <% end %>

      <%= form_tag offers_path, method: :get do %>
        <%= button_tag type: "submit", class: "btn btn-default", name: "party" do %>
          <i class="fa-solid fa-cake-candles"></i>
          <p>Animation</p>
        <% end %>
      <% end %>

      <%= form_tag offers_path, method: :get do %>
        <%= button_tag type: "submit", class: "btn btn-default", name: "cook" do %>
          <i class="fa-solid fa-utensils"></i>
          <p>Traiteur/Service à table</p>
        <% end %>
      <% end %>

      <%= form_tag offers_path, method: :get do %>
        <%= button_tag type: "submit", class: "btn btn-default", name: "all_offers" do %>
        <i class="fa-solid fa-rotate-left"></i>
        <p>Toutes les catégories</p>
        <% end %>
      <% end %>
    </div>
    <%# FIN ICONS RECHERCHE %>
      <div class="align-items-center my-3">
        <div style="width: 100%; height: 300px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    <div class="cards">
      <% @offers.each do |offer| %>
          <div class="card-offer position-relative">
            <%= link_to new_offer_booking_path(offer), id: "card-link" do %>
              <%= cl_image_tag offer.photo.key, width: 450, height: 200, style: "object-fit: cover"%>
              <div class="card-offer-infos">
                <h3><%= truncate(offer.name, length: 40, separator: ' ', omission: '...') %></h3>
                <em><h5><%= offer.category %></h5></em>
                <p><%= truncate(offer.description, length: 40, separator: ' ', omission: '...') %></p>
                </div>
                <div class="card-offer-person">
                    <h4 class="card-offer-pricing"><%= offer.price_per_day %> € /jour</h4>
                </div>
                <div class="position-absolute" style="top: 180px; right: 20px;">
                  <img src="<%= Faker::Avatar.image%>" class="card-trip-user avatar-bordered" />
                </div>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>
